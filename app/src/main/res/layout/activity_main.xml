<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCE4B2"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:id="@+id/cardGithub"
        android:backgroundTint="#DEE2B5">

        <TextView
            android:id="@+id/gitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="GitHub"
            android:textSize="35dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:id="@+id/cardLinkedIn"
        android:backgroundTint="#D4E2C3">

        <TextView
            android:id="@+id/linkedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="LinkedIn"
            android:textSize="35dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        android:id="@+id/cardUms"
        android:backgroundTint="#B3C89B">

        <TextView
            android:id="@+id/umsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="UMS"
            android:textSize="35dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:id="@+id/cardCamera"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#D5EDB9">

        <TextView
            android:id="@+id/cameraBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Camera"
            android:textSize="35dp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</LinearLayout>